header.header
  container()
  margin-bottom 30px
  section.header-top
    background primary
    position relative
    z-index 3
    display flex
    box-shadow normal-box-shadow
    border-radius 0 0 2px 2px
    div.header-top-logo
      flex-grow 1
      padding 15px
      h1
        line-height 50px
        margin 0
        color lighten(primary-light, 75%)
    nav.header-top-navigation
      flex-grow 1
      text-align right
      padding-right 15px
      a
        display inline-block
        line-height 50px
        text-decoration none
        color #fff
        font-size 16px
        padding 15px
        &:hover
          text-decoration underline
  nav.header-navigation
    background primary-dark
    position relative
    z-index 2
    display flex
    top -2px
    box-shadow normal-box-shadow
    border-radius 0 0 2px 2px
    padding 2px 5px 0
    div
      flex-grow 1
    .header-navigation-title
      color desaturate(lighten(primary-dark, 50%), 50%)
      padding 10px
    .header-navigation-links
      text-align right
    a
      text-decoration none
      display inline-block
      padding 10px
      color lighten(primary-light, 20%)
      &:hover
        text-decoration underline
