// Colors
light-gray = #efefef
primary = #af0606
primary-light = #ea050b
primary-dark = #6c0000
normal-box-shadow = 0 2px 5px rgba(0,0,0,0.26)

@import "mixins"
@import "meta"
@import "header"
@import "footer"

section.content
  container()
  display flex
  margin-bottom 30px
  padding 30px
  background #fff
  border-radius 2px
  box-shadow normal-box-shadow
  h1
    margin 0 0 15px
    font-weight 300
    font-size 32px
    .subtitle
      color darken(light-gray, 40%)
      font-size 80%
      display inline-block
      margin-left 15px

